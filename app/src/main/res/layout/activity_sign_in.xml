<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:padding="10dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:text="Sign In Page"
        android:gravity="center_horizontal"
        android:textSize="30sp"
        android:background="@color/textLabelBackground"
        android:textStyle="bold"
        android:id="@+id/sign_in_page_title"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:id="@+id/sign_in_page_logo"
        android:layout_below="@+id/sign_in_page_title"
        android:src="@drawable/logo_sign_in"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@+id/sign_in_page_logo"
        android:id="@+id/sign_in_items"
        android:orientation="vertical">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/sign_in_email"
            android:inputType="textEmailAddress"
            android:padding="10sp"
            android:background="@drawable/rounded_corner"
            android:hint="@string/input_user_email"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="10sp"
            android:id="@+id/sign_in_password"
            android:padding="10sp"
            android:background="@drawable/rounded_corner"
            android:inputType="textPassword"
            android:hint="@string/input_password"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in_show_password"
            android:text="@string/show_password"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sign_in_btn"
            android:text="@string/sign_in"/>

    </LinearLayout>
    <Button
        android:id="@+id/sign_up_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/sign_up"
        android:layout_below="@+id/sign_in_items"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/home_page"
        android:id="@+id/home_page_btn"
        android:layout_below="@id/sign_up_page"/>

</RelativeLayout>